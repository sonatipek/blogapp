<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('../partials/head.ejs', {title: "Blog List"}) %>
</head>
<body>
    <!-- Navbar -->
    <%- include('../partials/navbar') %>

    <div class="container">
        <% if (action && action === "create") { %>
            <%- include('../partials/alert.ejs', {alertClass: "success", alertText: "Blog Created!"}) %>
        <% } %>
        
        <% if (action && action === "update") { %>
            <%- include('../partials/alert.ejs', {alertClass: "warning", alertText: "Blog Updated!"}) %>
        <% } %>

        <% if (action && action === "delete") { %>
            <%- include('../partials/alert.ejs', {alertClass: "danger", alertText: "Blog Deleted!"}) %>
        <% } %>
    </div>
        
    <table class="table table-hover container mx-auto mt-3">
        <thead>
            <tr>
              <th scope="col">ID</th>
              <th scope="col">Image</th>
              <th scope="col">Title</th>
              <th scope="col"></th>
            </tr>
        </thead>
        <tbody>
            <% blogs.forEach(blog => { %>
                <tr>
                  <th scope="row">#<%= blog.id %></th>
                  <td><img src="/img/<%= blog.image %>" width="150" class="img-fluid"></td>
                  <td><%= blog.title %></td>
                  <td>
                    <a href="/admin/blogs/delete/<%= blog.id %>" class="btn btn-sm btn-danger">Delete Blog</a>
                    <a href="/admin/blogs/<%= blog.id %>" class="btn btn-sm btn-outline-danger">Update Blog</a>
                </td>
                </tr>
             
            <% }) %>
        </tbody>
    </table>
</body>

</html>