<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('../partials/head.ejs', {title: "Blog Edit"}) %>
</head>
<body>
    <!-- Navbar -->
    <%- include('../partials/navbar') %>

    <div class="row container mx-auto mt-5 border border-muted p-5 rounded">
        <div class="col-12">
            <form method="post" enctype="multipart/form-data">
              <input type="hidden" name="blogid" value="<%= blog.blogid %>">
              <input type="hidden" name="imageServer" value="<%= blog.img %>">
                <h1 class="text-center mb-5 h2">Blog Update Form</h1>

                <div class="row mb-3">
                  <label for="title" class="col-sm-2 col-form-label">Title</label>
                  <div class="col-sm-10 col-md-4">
                    <input type="text" class="form-control" id="title" name="title" value="<%= blog.title %>" placeholder="Please enter title info">
                  </div>
                </div>

                <div class="row mb-3" >
                  <label for="editor" class="col-sm-2 col-form-label">Decription</label>
                  <div class="col-sm-10 col-md-8">
                    <textarea class="form-control" id="editor" name="desc" style="height: 100px;">
                      <%= blog.descr %>
                    </textarea>
                  </div>
                </div>

                <div class="row mb-3">
                  <label for="image" class="col-sm-2 col-form-label">Image</label>
                  <div class="col-sm-10 col-md-4">
                      <img src="/img/<%= blog.img %>" class="img-fluid img-thumbnail mb-2" width="150px">
                      <input type="file" class="form-control" id="image" name="image" placeholder="Please enter image file name">
                    </div>
                </div>
                
                <div class="row mb-3">
                    <label for="category" class="col-sm-2 col-form-label">Category</label>
                    <select name="category" id="category" class="form-select col-sm-10 col-md-4" aria-label="Category select">
                        <option disabled >Please select category name</option>
                        <% categories.forEach(category => { %>
                            <% if (category.category_id == blog.category) { %>

                                <option value="<%= category.category_id %>" selected><%= category.category_name %></option>
                            <% } else { %>
                                    
                                <option value="<%= category.category_id %>"><%= category.category_name %></option>
                            <% } %>

                        <% }) %>
                    </select>
                </div>

                <div class="row mb-3">
                  <div class="col-sm-10 offset-sm-2">
                    <div class="form-check">
                      <input class="form-check-input" <%= blog.is_shown_homepage ? "checked" : "" %> type="checkbox" name="isShownHomepage" id="is-shown-homepage">
                      <label class="form-check-label" for="is-shown-homepage">
                            Show on home page
                      </label>
                    </div>
                  </div>
                </div>
                <button type="submit" class="btn btn-primary">Update</button>
            </form>

        </div>
    </div>
    <script src="https://cdn.ckeditor.com/ckeditor5/38.1.1/classic/ckeditor.js"></script>
    <script>
      ClassicEditor
          .create( document.querySelector( '#editor' ) )
          .catch( error => {
              console.error( error );
          } );
    </script>
  
</body>
</html>