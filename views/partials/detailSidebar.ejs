<div class="list-group">
    <% categories.forEach(categoryEl => { %>
        <a href="/blogs/category/<%= categoryEl.category_id %>" class="list-group-item list-group-item-action text-danger fw-bold">
            <%= categoryEl.category_name %>
            <% blogs.forEach(blog => { %>
                <% if (categoryEl.category_id == blog.category) { %>
                    
                    <% if (parseInt(blogid) === blog.blogid) { %>
                        <a href="/blogs/<%= blog.blogid %>" class="fw-bold list-group-item list-group-item-action text-muted ps-5">
                            <%= blog.title %>
                        </a>
                    <% }else{ %>
                        <a href="/blogs/<%= blog.blogid %>" class="list-group-item list-group-item-action text-muted ps-5">
                            <%= blog.title %>
                        </a>
                    <% } %>

                <% } %>
                
            <% }) %>
            
        </a>
    <% }) %>

</div>
