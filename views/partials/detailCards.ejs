<div class="card">
    <% blogs.forEach(blog => { %>
        <% if (parseInt(blogid) === blog.blogid) { %>
            <img src="/img/<%= blog.image %>" class="img-fluid w-50 h-50 align-self-center mt-1" alt="card photo">
            <div class="card-body">
                <h1 class="card-title text-danger-emphasis text-center h1">
                    <%= blog.title %>
                </h1>
                <p class="card-text px-3">
                    <%- blog.description %>
                </p>
            </div>
         
        <% } %>
    <% }) %>
</div>